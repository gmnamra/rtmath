#pragma once

#ifndef IGNORE_MANIFESTS
#ifndef EXPORTING_TMATRIX

// The manifest component name depends on whether a debug or release build is using the app.
// This is for ease of use when debugging.
#ifndef TMATRIX_ASSEMBLY_RELEASE
#define TMATRIX_ASSEMBLY_RELEASE "'@ASSEMBLY_NAME_Release@'"
#endif
#ifndef TMATRIX_ASSEMBLY_DEBUG
#define TMATRIX_ASSEMBLY_DEBUG "'@ASSEMBLY_NAME_Debug@'"
#endif
#ifndef TMATRIX_ASSEMBLY_RELWITHDEBINFO
#define TMATRIX_ASSEMBLY_RELWITHDEBINFO "'@ASSEMBLY_NAME_RelWithDebInfo@'"
#endif
#ifndef TMATRIX_ASSEMBLY_MINSIZEREL
#define TMATRIX_ASSEMBLY_MINSIZEREL "'@ASSEMBLY_NAME_MinSizeRel@'"
#endif

#define BUILDTYPE_Debug 1
#define BUILDTYPE_Release 2
#define BUILDTYPE_MinSizeRel 3
#define BUILDTYPE_RelWithDebInfo 4

#ifndef TMATRIX_ASSEMBLY_NAME
	#ifdef TMATRIX_FORCE_RELEASE
		#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_RELEASE
	#else
		#ifdef BUILDTYPE
			#if (BUILDTYPE == BUILDTYPE_Debug)
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_DEBUG
			#elif (BUILDTYPE == BUILDTYPE_RelWithDebInfo)
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_RELWITHDEBINFO
			#elif (BUILDTYPE == BUILDTYPE_MinSizeRel)
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_MINSIZEREL
			#else
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_RELEASE
			#endif
		#else
			#ifdef _DEBUG
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_DEBUG
			#else
				#define TMATRIX_ASSEMBLY_NAME TMATRIX_ASSEMBLY_RELEASE
			#endif
		#endif
	#endif
#endif

#pragma region Includes and Manifest Dependencies

// Enable manifest referencing
#if defined _M_IX86
#pragma comment(linker,"/manifestdependency:\"type='win32' name="TMATRIX_ASSEMBLY_NAME" version='@MAJOR@.@MINOR@.@REVISION@.@SVNREVISION@' processorArchitecture='x86' publicKeyToken='@ASSEMBLY_PUBLICKEYTOKEN@' language='*'\"")
#elif defined _M_IA64
#pragma comment(linker,"/manifestdependency:\"type='win32' name="TMATRIX_ASSEMBLY_NAME" version='@MAJOR@.@MINOR@.@REVISION@.@SVNREVISION@' processorArchitecture='ia64' publicKeyToken='@ASSEMBLY_PUBLICKEYTOKEN@' language='*'\"")
#elif defined _M_X64
#pragma comment(linker,"/manifestdependency:\"type='win32' name="TMATRIX_ASSEMBLY_NAME" version='@MAJOR@.@MINOR@.@REVISION@.@SVNREVISION@' processorArchitecture='amd64' publicKeyToken='@ASSEMBLY_PUBLICKEYTOKEN@' language='*'\"")
#else
#pragma comment(linker,"/manifestdependency:\"type='win32' name="TMATRIX_ASSEMBLY_NAME" version='@MAJOR@.@MINOR@.@REVISION@.@SVNREVISION@' processorArchitecture='*' publicKeyToken='@ASSEMBLY_PUBLICKEYTOKEN@' language='*'\"")
#endif
#pragma endregion

#endif
#endif

